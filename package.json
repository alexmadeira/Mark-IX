{
  "name": "modulo09",
  "version": "0.1.0",
  "private": true,
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && yarn test"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "cross-env CI=true yarn test --findRelatedTests",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "jest": {
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "collectCoverageFrom": [
      "!src/**/styles.js",
      "!src/styles/**/*",
      "!src/services/**/*",
      "!src/routes/**/*",
      "!src/store/modules/*.js",
      "!src/store/*.js",
      "!src/*.js",
      "src/pages/**/*.js",
      "src/components/**/*.js",
      "src/hooks/**/*.js"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/src/assets/emojis/"
    ],
    "moduleNameMapper": {
      "^~(.*)$": "<rootDir>/src$1"
    }
  },
  "dependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "axios": "^0.19.0",
    "customize-cra": "^0.2.14",
    "eslint-plugin-import-helpers": "^1.0.2",
    "immer": "^9.0.6",
    "lint-staged": "^9.5.0",
    "lodash": "^4.17.20",
    "polished": "^3.5.1",
    "prop-types": "^15.7.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-icons": "^3.9.0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.0.1",
    "react-scripts": "3.4.1",
    "react-scroll": "^1.8.1",
    "react-scroll-parallax": "^2.3.4",
    "react-top-loading-bar": "^2.0.1",
    "react-transition-group": "^4.3.0",
    "reactotron-react-js": "^3.3.2",
    "reactotron-redux": "^3.1.2",
    "reactotron-redux-saga": "^4.2.3",
    "redux": "^4.0.5",
    "redux-saga": "^1.1.3",
    "styled-components": "^4.3.2"
  },
  "scripts": {
    "start": "yarn && react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test --watchAll false",
    "test:watch": "react-app-rewired test",
    "test:coverage": "react-app-rewired test --coverage --watchAll false",
    "test:badges": "react-app-rewired test --coverage  --watchAll false && jest-coverage-badges",
    "eject": "react-scripts eject",
    "storybook": "start-storybook -p 9009 -s public",
    "build-storybook": "build-storybook -s public"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.3",
    "@commitlint/config-conventional": "^8.3.3",
    "@storybook/addon-actions": "^5.3.8",
    "@storybook/addon-centered": "^5.3.8",
    "@storybook/addon-info": "^5.3.8",
    "@storybook/addon-links": "^5.3.8",
    "@storybook/addons": "^5.3.8",
    "@storybook/preset-create-react-app": "^1.5.2",
    "@storybook/react": "^5.3.8",
    "babel-plugin-root-import": "^6.2.0",
    "commitizen": "^4.0.3",
    "cross-env": "^6.0.3",
    "cz-conventional-changelog": "3.0.2",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-import-resolver-babel-plugin-root-import": "^1.1.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "eslint-plugin-react-hooks": "^1.6.1",
    "husky": "^3.1.0",
    "jest-coverage-badges": "^1.1.2",
    "json-server": "^0.16.1",
    "prettier": "^1.18.2",
    "react-app-rewired": "^2.1.3",
    "react-hooks-testing-library": "^0.6.0",
    "redux-mock-store": "^1.5.4"
  }
}
